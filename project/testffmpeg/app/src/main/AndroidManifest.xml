<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testffmpeg">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GiftTestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Decoder/AudioDecoder -->
        <activity
            android:name=".decoder.AudioDecoderActivity"
            android:exported="false"
            android:label="activity_audio_decoder" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="net.thdev.mediacodecexample.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <!-- Decoder/VideoDecoder -->
        <activity
            android:name=".decoder.VideoDecoderActivity"
            android:exported="false"
            android:label="activity_video_decoder"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="net.thdev.mediacodecexample.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>