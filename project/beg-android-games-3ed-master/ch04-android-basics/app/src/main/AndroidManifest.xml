<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badlogic.androidgames.ch04androidbasics">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FontTest"></activity>
        <activity
            android:name=".LifeCycleTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Life Cycle Test"></activity>
        <activity
            android:name=".SingleTouchTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Single Touch Test"></activity>
        <activity
            android:name=".MultiTouchTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Multi Touch Test"></activity>
        <activity
            android:name=".KeyTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Key Test"></activity>
        <activity
            android:name=".AccelerometerTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Accelerometer Test"></activity>
        <activity
            android:name=".AssetsTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Assets Test"></activity>
        <activity
            android:name=".ExternalStorageTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="External Storage Test"></activity>
        <activity
            android:name=".SoundPoolTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Soundpool Test"></activity>
        <activity
            android:name=".FullScreenTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Fullscreen Test"></activity>
        <activity
            android:name=".RenderViewTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Render View Test"></activity>
        <activity
            android:name=".ShapeTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Shape Test"></activity>
        <activity
            android:name=".BitmapTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Bitmap Test"></activity>
        <activity
            android:name=".SurfaceViewTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Surfaceview Test"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".mrnom.MrNomGame"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="MrNomGame"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".AndroidBasicsStarter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>