<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.videodecoderandrender">
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:configChanges="keyboard|keyboardHidden|orientation"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".demo.chap04.dm01.Dm01TwoDG1Activity"
            android:label="Dm01Activity" android:screenOrientation="landscape"/>

        <activity
            android:name=".demo.chap04.dm02.Dm02Cube2Activity"
            android:label="Dm02Cube2Activity" android:screenOrientation="landscape"/>

        <activity
            android:name=".demo.chap04.dm03.EGLDemoActivity"
            android:label="Dm02Cube2Activity" android:screenOrientation="landscape"/>
    </application>

</manifest>